datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Siswa {
  id     Int    @id @default(autoincrement())
  nama   String
  umur   Int?

  kelasId Int
  kelas   Kelas   @relation(fields: [kelasId], references: [id])
}

model Guru{
  id Int @id @default(autoincrement())
  nama String

   kelas  Kelas[]   // 1 guru bisa mengajar banyak kelas
  
}


model Kelas {
  id      Int     @id @default(autoincrement())
  nama    String

  guruId  Int
  guru    Guru    @relation(fields: [guruId], references: [id])

  siswa   Siswa[] // 1 kelas punya banyak siswa
}

enum Role {
  GURU
  WALI_MURID
}


model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  role     Role  @default(WALI_MURID)
  createdAt DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int
  stock     Int
  photo     String
  createdAt DateTime @default(now())
}